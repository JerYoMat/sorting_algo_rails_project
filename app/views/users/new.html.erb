<% provide(:title, 'Sign up') %>

<h1>It's better if you sign up!</h1>

<div class='row'>
  <div class="col-md-6 col-md-offset-3">
     <%= form_for(@user) do |f|%>
       <%= f.label :name %>
       <%= f.text_field :name %><br>
       
       <%= f.label :email %>
       <%= f.email_field :email %><br>
       
       <%= f.label :password %>
       <%= f.password_field :password %><br>

       <%= f.label :password_confirmation, "Confirmation" %>
       <%= f.password_field :password_confirmation %><br>

    
       <div>
       <p>Are you a smoker?  We don't judge and definitely do not share this info!  </p>
       <%= radio_button_tag(:smoker, true) %>
       <%= label_tag(:smoker, "Yes") %>
       <%= radio_button_tag(:smoker, false) %>
       <%= label_tag(:non_smoker, "No") %><br>
      </div>
      <br>




       <%= f.submit "Create my account", class: "btn btn-primary" %>
     <% end %>
  </div>
</div>