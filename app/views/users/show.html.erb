<% provide(:title, @user.name) %>

 <aside class="col-md-6 col-md-offset-3">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
   <div class="col-md-8">
    <% if @tips.any? %>
      <h3>Your Tips: (<%= @tips.count %>)</h3>
      <ol class="tips">
        <%= render @tips %>
      </ol>
    <% end %>
  </div>